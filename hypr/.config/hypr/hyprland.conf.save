##########################
## HYPRLAND CONFIG FILE ##
##########################

#############################
### ENVIRONMENT VARIABLES ###
#############################

# See https://wiki.hypr.land/Configuring/Environment-variables/
env = XCURSOR_SIZE,24
env = HYPRCURSOR_SIZE,24
env = ELECTRON_OZONE_PLATFORM_HINT,auto # Wayland for electron apps

# Default applications
$terminal = foot
$fileManager = thunar
$menu = wofi -i --show drun

# Sourcing
source =~/.config/hypr/hyprland/keybinds.conf
source =~/.config/hypr/hyprland/monitors.conf
source =~/.config/hypr/scripts/monitorstate.conf # Internal laptop screen state is written here. Do not remove.
source =~/.config/hypr/hyprland/windowrules.conf

################
### MONITORS ###
################

# See https://wiki.hyprland.org/Configuring/Monitors/
exec-once = ~/.config/hypr/scripts/clamshell.sh # Disables or enables internal laptop screen on startup.
monitor=,preferred,auto,1

# Disables or enables internal laptop screen on lid state change
bindl=,switch:on:Lid Switch,exec,~/.config/hypr/scripts/clamshell.sh
bindl=,switch:off:Lid Switch,exec,~/.config/hypr/scripts/clamshell.sh

#################
### AUTOSTART ###
#################

exec-once = "echo
exec-once = waybar
exec-once = hyprpaper
exec-once = swaync
exec-once = hypridle
exec-once = systemctl --user start hyprpolkitagent

# Autostart terminal centered in magic workspace
windowrule = match:class ^(magic-terminal)$, float on, size (monitor_w*0.6) (monitor_h*0.5), center on
exec-once = [workspace special:magic silent] $terminal --app-id "magic-terminal"

#####################
### LOOK AND FEEL ###
#####################

# See https://wiki.hyprland.org/Configuring/Variables/

general {
    gaps_in = 3
    gaps_out = 3
    border_size = 2

    # https://wiki.hyprland.org/Configuring/Variables/#variable-types for info about colors
    col.active_border = rgba(33ccffee)
    col.inactive_border = rgba(595959aa)

    # Set to true enable resizing windows by clicking and dragging on borders and gaps
    resize_on_border = false

    layout = dwindle
}

windowrule = match:xwayland true, border_color rgba(ff0066ee) # Red border for xwayland

# https://wiki.hyprland.org/Configuring/Variables/#decoration
decoration {
    rounding = 0

    # Change transparency of focused and unfocused windows
    active_opacity = 1.0
    inactive_opacity = 1.0

    # https://wiki.hyprland.org/Configuring/Variables/#blur
    blur {
        enabled = true
        size = 6
        passes = 3
	new_optimizations = true   
	xray = true
 }
    shadow {
        enabled = false
        range = 4
        render_power = 3
        color=rgba(1a1a1aee)
	}
}

# https://wiki.hyprland.org/Configuring/Variables/#animations
animations {
    enabled = true

    # Default animations, see https://wiki.hyprland.org/Configuring/Animations/ for more

    bezier = myBezier, 0.05, 0.9, 0.1, 1.05

    animation = windows, 1, 3, myBezier
    animation = windowsOut, 1, 3, default
    animation = border, 1, 2, default
    animation = borderangle, 1, 4, default
    animation = fade, 1, 3, default
    animation = workspaces, 1, 2, default
}

# See https://wiki.hyprland.org/Configuring/Dwindle-Layout/ for more
dwindle {
    pseudotile = true # Master switch for pseudotiling. Enabling is bound to mainMod + P in the keybinds section below
    preserve_split = true # You probably want this
}

# See https://wiki.hyprland.org/Configuring/Master-Layout/ for more
master {
    new_status = master
}

# https://wiki.hyprland.org/Configuring/Variables/#misc
misc {
    force_default_wallpaper = 0 # Set to 0 or 1 to disable the anime mascot wallpapers
    disable_hyprland_logo = true # If true disables the random hyprland logo / anime girl background. :(
}

#############
### INPUT ###
#############

# https://wiki.hyprland.org/Configuring/Variables/#input
input {
    kb_layout = fi
    kb_variant =
    kb_model =
    kb_rules =
    kb_options = caps:swapescape

    follow_mouse = 1
    accel_profile = flat
    force_no_accel = true

    sensitivity = 0 # -1.0 - 1.0, 0 means no modification.

    touchpad {
        natural_scroll = false
    }
}

# https://wiki.hyprland.org/Configuring/Variables/#gestures

gesture = 3, horizontal, workspace

##############################
### WINDOWS AND WORKSPACES ###
##############################

# See https://wiki.hyprland.org/Configuring/Window-Rules/ for more
# See https://wiki.hyprland.org/Configuring/Workspace-Rules/ for workspace rules

windowrule = suppress_event maximize, match:class .* # You'll probably like this.
layerrule = no_anim on, match:namespace ^(wofi)$

misc {
    vfr = false
}
general {
    allow_tearing = true
}

debug { # Temporarily enable logging to catch random crashes
    disable_logs = false
    enable_stdout_logs = true
}
